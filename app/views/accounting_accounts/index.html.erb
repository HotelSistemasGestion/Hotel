<div class="box">
  <div class="row">
       <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="box-header with-border">
                                    <div class="col-sm-offset-1 col-sm-9">
                                    <table class="table-responsive ">
                                    <thead>
                                    <tr role="row">
                                     <th class="col-sm-2"><h3 class="box-title titulo">CUENTAS</h3></th>
                                     <th class="col-sm-2"><h3 class="box-title titulo"><%= link_to new_accounting_account_path, remote: true, class: 'btn btn-primary' do %><span class="glyphicon glyphicon-plus"></span>
                                       <% end %></h3></th>
                                     <th class="col-sm-2"><td class="col-sm-2"><h3 class="box-title titulo">Ejercicios</h3></td> <td class="col-sm-2"><%= form_for @accounting_years= AccountingYear.new do |f| %>
                                    <%= select("accounting_year", "accounting_year_id", AccountingYear.all.collect {|p| [ p.anho, p.id ] }, {include_blank: 'Seleccione'}) %>
                                    <% end %></td></th>

                                    </tr>
                                    </thead>
                                    </table>
                                    </div> 
                      </div>
        <div class="box-body">
          <div class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
              <div class="col-sm-6"></div>
              <div class="col-sm-6"></div>
            </div>
            
            <div class="row">
              <div class="col-sm-offset-1 col-sm-9">
                <table class="table table-bordered  table-responsive ">
                  <thead>
                    <tr role="row">
                      <th class="col-sm-2">Grupo</th>
                      <th class="col-sm-2">Cuenta</th>
                      <th class="col-sm-2">Nombre</th>
                      <th class="col-sm-2">Imputable</th>  
                      <th class="col-sm-2">Opciones</th>  
                    </tr>
                  </thead>
                  <tbody>
                    <% @accounting_accounts.each do |accounting_account| %>
                    <%= render "row", accounting_account: accounting_account %>
                    <% end %>
                  </tbody> 
                </table>
              </div>  
            </div>
          </div>
        </div>
  </table>
</div>
</div>
       </div>
</div>