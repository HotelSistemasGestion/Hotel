<!-- Modal -->
<div class="modal fade" id="show-modal">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Datos de Cuenta</h4>
      </div>
      
      <div class="modal-body">          

          <div class="form-group">
            <p>
              <strong>Grupo:</strong>
              <%= @accounting_account.grupo %>
            </p>       
          </div>
          <div class="form-group">
            <p>
              <strong>Cuenta:</strong>
              <%= @accounting_account.cuenta %>
            </p>       
          </div>

          <div class="form-group">
            <p>
              <strong>Nombre:</strong>
              <%= @accounting_account.nombre %>
            </p>          
          </div>
          
          <div class="form-group">
            <p>
              <strong>Imputable:</strong>
              <%= @accounting_account.imputable %>
            </p>          
          </div>

      </div>

      <div class="modal-footer">
          <button type="button" class="btn btn-primary btn-lg" data-dismiss="modal">Aceptar</button>
      </div>

    </div>      
  </div>
</div>