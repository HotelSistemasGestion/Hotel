<tr id="<%= accounting_account.id %>">
    <td><%= accounting_account.grupo %></td>
    <td>
    <%p=0%>
    <%if accounting_account.cuenta!=p %>
    <%= accounting_account.cuenta %>
    <%end%> 
    </td>
    <td>
 
    <%padre=9%>
    <%padre1=0%>
    <%hijo=99%>
    <%nieto=999%>
    <%bisnieto=9999%>
    <% str=raw("&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp")%>
    <%label1="|_____" %>
    <span style="color:navy">



    <%if accounting_account.grupo<padre and accounting_account.cuenta==padre1%>
    <%=accounting_account.nombre %>
    <%end%>
    

    
    <%if accounting_account.cuenta<hijo and accounting_account.cuenta==padre1 and accounting_account.grupo>padre%>
    <span style="color: blue"><%=str%><%= label1 %></span><%=accounting_account.nombre %>
    <%end%>
    

    
    <%if accounting_account.cuenta<hijo and accounting_account.cuenta>padre1%>
    <span style="color: blue"><%=str%><%=str%><%= label1 %></span><%=accounting_account.nombre %>
    <%end%>


    <%if accounting_account.cuenta<nieto and accounting_account.cuenta>hijo%>
    <span style="color: blue"><%=str%><%=str%><%=str%><%= label1 %></span><%=accounting_account.nombre %>
    <%end%>

    <%if accounting_account.cuenta<bisnieto and accounting_account.cuenta>nieto%>
    <span style="color: blue"><%=str%><%=str%><%=str%><%=str%><%= label1 %></span><%=accounting_account.nombre %>
    <%end%>

    </span>
    </td> 
    <td>
    <%bo=true%>
    <%bo1=false%>
    <%mostrar="Si"%>
    <%mostrar1="No"%>
    <%if accounting_account.imputable==bo%>
    <%= mostrar %>
    <%end%>
    <%if accounting_account.imputable==bo1%>
    <%= mostrar1 %>
    <%end%>
    </td>
   <td align="center">
                <%= link_to '',accounting_account, remote: true, class: 'btn btn-primary glyphicon glyphicon-eye-open', title: 'Ver'%>


                <%= link_to '',edit_accounting_account_path(accounting_account), class: 'btn btn-warning glyphicon glyphicon-pencil', title: 
                'Editar Cuenta' %>

                <%= link_to '',accounting_account, method: :delete, data: { confirm: 'Esta seguro?' }, class: 'btn btn-danger glyphicon glyphicon-trash', title: 'Eliminar' %>

    </td>
</tr>           