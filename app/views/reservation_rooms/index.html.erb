<div class="box">
  <%#= link_to 'New Reservation request', new_reservation_request_path %>
  <div class="box-header with-border">
    <%#= link_to new_customer_path, class: 'btn btn-primary' do %>
      <!--span class="glyphicon glyphicon-plus"></span>
      New Customer
    <#% end %-->
    <h3><center>Reservaciones de Cuartos</center></h3> 
    
    <br>
   
  </div>
  
  <div class="box-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                    <th>Reservacion</th>
                    <th>Cuarto</th>
                    <th>Tipo de Cuarto</th>
                    <th>Tipo de Confort</th>
                    <th>Check_in</th>
                    <th>Check_out</th>

              </tr>
            </thead>

            <tbody>
              <%= content_tag_for(:tr, @reservation_rooms) do |room| %>
                          
                  <td><%= room.reservation_id %></td>
                  <td><%= Room.find(room.room_id).identificador %></td>
                  <td><%= TypeOfRoom.find(room.type_of_room_id).tipo %></td>
                  <td><%= Comfort.find(room.comfort_id).descripcion %></td>
                  <td><%= room.check_in %></td>
                  <td><%= room.check_out %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      

  </div>
  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">
         <nav><%= paginate @reservation_rooms, :theme => 'twitter-bootstrap-3' %></nav>
    </ul>
    
  </div>
</div>
  <div class="box ">
              <div class="box-header">
                <h4 class="box-title">Calendario</h4>

                <div class="box-tools pull-right">
                  <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
              </div>
           
              <div class="box-body">
                <div id='calendario_reserva'></div>
              </div>
        </div>