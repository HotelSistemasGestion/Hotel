
<%= nested_form_for(@account_plan ,html: { class: "form-horizontal", role: "form" },:validate => true) do |f| %>
  <% if @account_plan.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@account_plan.errors.count, "error") %> prohibited this account_plan from being saved:</h4>

      <ul>
      <% @account_plan.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-4 ">
    <%= f.label 'Descripcion' ,class: "col-sm-2 control-label" %><br>
    <%= f.text_field :descripcion, class: "form-control col-md-2",placeholder:"Descripcion",minlength:5,maxlength:30,:required=>true %>

  </div>
  <div class="col-md-4 ">
    <%= f.label 'Estado' ,class: "col-sm-2 control-label" %><br>
    <%= f.text_field :estado, class: "form-control col-md-2",placeholder:"Estado",minlength:5,maxlength:10,:required=>true %>
    
  </div>
  <div class="col-md-4 ">
    <%= f.label 'Version' ,class: "col-sm-2 control-label" %><br>
    <%= f.number_field :version, class: "form-control col-md-2",placeholder:"Version",min: 0,:required => true %>
    
  </div>
</div>

      <br></br>
       <div class="box box-primary box-solid collapsed-box">
          <div class="box-header with-border">
            <h3 class="box-title" style="color:white"><center>Agregar Ejercicio</center></h3>
              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                </button>
              </div>
          </div>
            <div class="box-body" style="display: none;">
            <div class="table-responsive well">
            <table class="table table-striped table-bordered table-hover">
            <thead class="thead-inverse">
              <tr>
                <th class="control-label">Ejercicio</th>
                <th class="control-label">Estado</th>
              </tr>
            </thead>
            <tbody>
              <%= f.fields_for :accounting_years , :validate => true,:wrapper => false  do |li| %>
              <tr class="fields">
                  <td scope="row">
                    <%= li.number_field :anho ,:class => "form-control" ,min: 0,minlength:4,maxlength:4,:required => true%>
           
                  </td> 
                  <td >
                    <%= li.text_field :estado, :class => "form-control" ,minlength:5,maxlength:10,:required=>true%>

                  </td>             
              <td>
                  <%= li.link_to_remove "", :class => "btn btn-danger glyphicon glyphicon-trash " %>
                </td>               
              </tr>
              <%end%>
              
              <tr>
                <td><%= f.link_to_add "", :accounting_years , :class => "btn btn-primary glyphicon glyphicon-plus"%></td>
              </tr>

          </tbody>
        </table>
      </div>
    </div>
</div>
        
 
    <div class="box-footer">
      <div class="col-sm-offset-8 col-sm-10">
        <%= f.submit "Aceptar", class: "btn btn-primary " %>
      </div>
    </div>
  </div>

  <% end %>
