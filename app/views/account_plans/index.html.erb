<div class="box">
  <div class="row">
       <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="box-header with-border">
                                    <div class="col-sm-offset-1 col-sm-9">
                                    <table class="table-responsive ">
                                    <thead>
                                    <tr role="row">
                                     <th class="col-sm-2"><h3 class="box-title titulo">PLANES DE CUENTAS</h3></th>
                                     <th class="col-sm-2"><h3 class="box-title titulo"><%= link_to new_account_plan_path, remote: true, class: 'btn btn-primary' do %><span class="glyphicon glyphicon-plus"></span>
                                       <% end %></h3></th>
                                    </tr>
                                    </thead>
                                    </table>
                                    </div> 
                      </div>
        <div class="box-body">
          <div class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
              <div class="col-sm-6"></div>
              <div class="col-sm-6"></div>
            </div>
            
            <div class="row">
              <div class="col-sm-offset-1 col-sm-9">
                <table class="table table-bordered  table-responsive ">
                  <thead>
                    <tr role="row">
                      <th class="col-sm-2">Descripcion</th>
                      <th class="col-sm-3">Estado</th>
                      <th class="col-sm-3">Version</th>
                      <th class="col-sm-3">Opciones</th> 
                    </tr>
                  </thead>
                  <tbody>
                    <% @account_plans.each do |account_plan| %>
                    <%= render "row", account_plan: account_plan %>
                    <% end %>
                  </tbody> 
                </table>
              </div>  
            </div>
          </div>
        </div>
  </table>
</div>
</div>
       </div>
</div>