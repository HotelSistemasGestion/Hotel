<div id="filterrific_results">



<div class="box">
 <div class="box-header with-border">
  <h1 class="box-title">Listado de clientes Registrados</h1>
  </div>

<div class="box-body">
<div class="table-responsive ">
   <div id="filterrific_results">
  <table class="table table-striped table-bordered table-hover">
  <colgroup>
    <col style="width:20%">
    <col style="width:20%">
    <col style="width:40%">
    <col style="width:20%">
  </colgroup>
    <thead>
      <tr>
        <th>Habitacion</th>
        <th>Servicio relacionado</th>
        <th>Queja</th>
        <th>Fecha</th>
      </tr>
    </thead>

   
    <tbody>
    
    
      <%= content_tag_for(:tr, @complaints.order(id: :desc)) do |complaint| %>
       <td><%= complaint.room.identificador %></td>
       <td><%= complaint.complaint_service.description + " - " + complaint.service_description.to_s%></td>
      <td><%= complaint.description %></td>
       <td><%= complaint.created_at %></td>
    <% end %>
    </tbody>

  </table>
  </div>
   <div class="input-group-control", style="float: right">
   
      <%= submit_tag "Imprimir",type:"button",class:"btn btn-primary"%>
   
  
  
      <%= submit_tag "Ver como PDF",type:"button",class:"btn btn-primary"%>
         </div>
    

    </div>

    <%= will_paginate @complaints%>
</div>
</div>