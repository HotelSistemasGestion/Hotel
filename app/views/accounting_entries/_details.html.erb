<!-- Modal -->
<div class="modal fade" id="show-modal">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Datos de Asiento</h4>
      </div>
      
      <div class="modal-body">          

          <div class="form-group">
            <p>
              <strong>Numero:</strong>
              <%= @accounting_entry.numero %>
            </p>       
          </div>
          <div class="form-group">
            <p>
              <strong>Fecha:</strong>
              <%= @accounting_entry.fecha %>
            </p>       
          </div>

          <div class="form-group">
            <p>
              <strong>Iva:</strong>
              <%= @accounting_entry.iva %>
            </p>          
          </div>
          <div class="form-group">
            <p>
              <strong>Debe:</strong>
              <%= @accounting_entry.debe %>
            </p>          
          </div>
          <div class="form-group">
            <p>
              <strong>Haber:</strong>
              <%= @accounting_entry.haber %>
            </p>          
          </div>

      </div>

      <div class="modal-footer">
          <button type="button" class="btn btn-primary btn-lg" data-dismiss="modal">Aceptar</button>
      </div>

    </div>      
  </div>
</div>