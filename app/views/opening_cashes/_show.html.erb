<div id="invoice-modal" class="modal fade">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Apertura</h4>
      </div>
      <%#= form_for @invoice, remote: true do |f| %>        
        <div class="modal-body">
          <div class="alert alert-danger" role="alert" style="display: none;"></div>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>Caja: </label>
                <%= Cash.find(@opening_cash.cash_id).descripcion %>            
              </div> 
              <div class="form-group">
                <label>Cajero: </label>
                <%= Employee.find(@opening_cash.employee_id).full_name %>            
              </div> 
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Fecha Apertura: </label>
                <%= @opening_cash.fecha_apertura %>            
              </div> 
              <div class="form-group">
                <label>Monto Efectivo: </label>
                <%= number_to_currency_py(@opening_cash.monto_efectivo) %>            
              </div> 
            </div>
          </div>
      </div>
      <div class="modal-footer">
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->-->