<p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-sm-12">
      <div class="box">   
        <div class="box-header">
          <div class="col-sm-2"></div>
          <h3 class="box-title col-sm-6">
            Aperturas de Cajas
          </h3>
          <%= link_to 'Nueva Apertura', new_opening_cash_path, class: "btn btn-primary" %>           
        </div> 
        
        <div class="box-body">
          <div class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
              <div class="col-sm-6"></div>
              <div class="col-sm-6"></div>
            </div>
            
            <div class="row">
              <div class="col-sm-offset-1 col-sm-9">
                <table class="table table-bordered table-hover dataTable">
                  <thead>
                    <tr role="row">
                      <th>Caja</th>
                      <th>Cajero</th>
                      <th>Fecha</th>
                      <th>Monto Efectivo</th>
                      <th></th> 
                      <th></th>  
                    </tr>
                  </thead>
                  <tbody>
                    <%= content_tag_for(:tr, @opening_cashes) do |opening_cash| %>
                    <td><%= opening_cash.cash_descripcion %></td>
                    <td><%= opening_cash.employee.full_name %></td>
                    <td><%= opening_cash.fecha_apertura %></td>
                    <td><%= opening_cash.monto_efectivo %></td>
                    <td align="center">
            <%= link_to opening_cash, class: 'btn btn-primary', title: 'Ver', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-eye-open"></span>
                    <% end %>
                <%= link_to edit_opening_cash_path(opening_cash), class: 'btn btn-warning', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-pencil"></span>
                    <% end %>
            <%= link_to opening_cash, method: :delete, data: { confirm: 'Esta seguro?' }, class: 'btn btn-danger', title: 'Eliminar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                        <span class= "glyphicon glyphicon-trash"></span>
                    <% end %></td>
                    <% end %>
                  </tbody>  
                </table>
              </div>  
            </div>
          </div>
        </div>
      </div>  
    </div>
  </div>


  

  