<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><center>Facturas</center></h3>
    <a href="<%=new_invoice_path%>" class="btn btn-primary pull-right" role="button">Nueva Factura</a> 
  </div>
  <div class="box-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
              <th>Numero</th>
              <th>Fecha</th>
              <th>Cliente</th>
              <th>Total</th>
              <th>Estado</th>                        
              <th></th>               
            </tr>
          </thead>
        <tbody>
           <% @invoices.each do |invoice| %>
              <tr>
                <td><%= invoice.numero %></td>
                <td><%= invoice.fecha %></td>
                <td><%= invoice.nombre %></td>  
                <td><%= invoice.total%></td> 

                <%if invoice.pendiente? %>
                  <% btn = 'warning' %>
                <%elsif invoice.pagado? %>
                  <% btn = 'success' %>
                <%elsif invoice.cancelado? %>
                  <% btn = 'danger' %>
                <%else %>
                  <% btn = 'default' %>
                <%end%>     

                <td><span class="label label-<%=btn%>"><%= invoice.state %></span></td>              
                <td align="center">

                    <%= link_to invoice, remote: true, class: 'btn btn-primary', title: 'Ver Factura', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-eye-open"></span>
                    <% end %>

                  
                    <%= link_to edit_invoice_path(invoice), class: 'btn btn-warning', title: 'Editar Factura', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-pencil"></span>
                    <% end %>                
                                  
                  
                    <%= link_to invoice, method: :delete, data: { confirm: "Esta seguro ?" }, class: 'btn btn-danger', title: 'Eliminar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-trash"></span>
                    <% end %>                                                
                
                </td> 
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>