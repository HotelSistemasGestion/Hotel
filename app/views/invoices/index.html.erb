<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Facturas</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 text-right">
      <%= link_to 'Nueva Factura', new_invoice_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <table class="table">
        <thead>
          <tr>
              <th>Numero</th>
              <th>Cliente</th>
              <th>Fecha</th>
              <th>Descuento</th>
              <th colspan="3"></th>            
          </tr>
        </thead>
        <tbody>
          <% @invoices.each do |invoice| %>
            <tr>
              <td><%= invoice.numero %></td>
              <td><%= invoice.nombre%></td>
              <td><%= invoice.fecha %></td>
              <td><%= invoice.descuento %></td>
              <td><%= link_to invoice, remote: true, class: 'col-sm-2', title: 'Ver Factura', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon glyphicon-eye-open"></span>
                    <% end %></td>
              <td><%= link_to edit_invoice_path(invoice), class: 'col-sm-2', title: 'Editar Factura', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon glyphicon-edit"></span>
                    <% end %></td>
              <td><%= link_to invoice, method: :delete, data: { confirm: 'Esta seguro?' }, remote: true, class: 'col-sm-2', title: 'Eliminar Factura', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon glyphicon-trash"></span>
                    <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>