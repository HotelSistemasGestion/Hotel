<div class="box">
  
  
     
      <div class="box-header with-border">
        <h3 class="box-title">Habitacion <%= @room.identificador %></h3>
      </div>
      
 

    <div class="box-body">

      <div class="col-sm-2">

      <dd>Identificador: <%= @room.identificador %></dd>
      <dd></dd>

      <dt>Tipo de Habitacion:</dt>
      <dd><%= @room.type_of_room_tipo %></dd>
      <dt>Estado:</dt>
      
          <!--Se determina el color del label dependiendo del estado NO UTILIZO ENUMERIZE, -->                   
                <%if @room.state_descripcion == "libre" %>
                  <% btn = 'warning' %>
                <%elsif @room.state_descripcion == "fuera de servicio" %>
                  <% btn = 'success' %>
               
                <%else %>
                  <% btn = 'default' %>
                <%end%>     
                <dd><span class="label label-<%=btn%>"><%= @room.state_descripcion %></span></dd>

    


      <dt>Capacidad:</dt>
      <dd><%= @room.capacidad %></dd>
      
      <dt>Comfort:</dt>
      <dd><%= @room.comfort_descripcion %></dd>

     
      
      
      </div>
      <div class="col-sm-8">
        
      <% Photo.where("#{:room_id} = ?" , @room.id).each do |p|%>
        <div class="col-sm-2">
             <a  href= "<%=p.my_file.url%>"  class="image-popup">
             <%= image_tag p.my_file.url,:width => 200, :height => 200%>
             </a>
        </div>
      <%end%>

      </div>    
     </div>

     <BR>
     <BR>
     <div class="box-body">
    
        <div>
          <%= link_to rooms_path, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-list-alt"></span>
          Volver
          <% end %>
         <%= link_to edit_room_path(@room),class: "btn btn-default" do %>
         <span class="glyphicon glyphicon-edit"></span>
         Editar
         <%end%> 
        </div>
    </div>
 
</div>
