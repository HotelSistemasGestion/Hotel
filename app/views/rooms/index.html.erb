<h1>Listing rooms</h1>
</div>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 text-right">
      <%= link_to new_room_path, remote: true, class: "btn btn-primary" do %>
      <span class="glyphicon glyphicon-plus"></span>
       Nueva Habitacion
      <%end%>
    </div>
  </div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Type of room</th>
    
        <th>State</th>
    
        <th>Capacidad</th>
    
        <th>Identificador</th>
    
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @rooms) do |room| %>
    
        <td><%= room.type_of_room_id %></td>
    
        <td><%= room.state %></td>
    
        <td><%= room.capacidad %></td>
    
        <td><%= room.identificador %></td>
    
        <td><%= link_to 'Show', room,class: "btn btn-primary"  %></td>
        <td><%= link_to 'Edit', edit_room_path(room) ,class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-primary"  %></td>
      <% end %>
    </tbody>
  </table>
</div>

