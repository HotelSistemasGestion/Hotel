<div class="box box-primary">
 <div class="box-header with-border">

  <h3 class="box-title">
    <i class="fa fa-globe"></i>#Hotel-UNI  Listado de Habitaciones
            
  </h3>
</div>
<div class="box-body"> 
        <div class="col-xs-3">
                 <%= link_to new_room_path, class: "btn btn-primary form-control" do %>
                  <span class="fa fa-fw fa-bed"></span>
                   Nueva Habitacion
                  <%end%>
               
        </div>

       <button type="button" class="btn btn-primary" id="showmenu">
          <span class="glyphicon glyphicon-search"></span>
      </button> 
  </div>
      <div class="menu well" style="display: none;">
      <div class="row">    
       
            <%= form_for_filterrific @filterrific do |f| %>

               
                <div class="col-xs-3">
               <%= f.select(:sorted_by_state,
                  @filterrific.select_options[:sorted_by_state],
                  { include_blank: 'Todas los Estados' },{ :class => 'form-control' })%>
                </div>

                 <div class="col-xs-3">
               <%= f.select(:sorted_by_type,
                  @filterrific.select_options[:sorted_by_type],
                  { include_blank: 'Todas los tipos' },{ :class => 'form-control' })%>
                </div>
                
               <%= render_filterrific_spinner %>
            <% end %>
    </div>
    </div>
<script type="text/javascript">
   $(window).load(function() {
        $('#showmenu').click(function() {
                $('.menu').toggle("slide");
        }); 
    });
   </script>

<%= render(
  partial: 'rooms/list_index',
  locals: { rooms: @rooms }
) %>


</div>