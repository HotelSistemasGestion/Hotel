<div class="box">
 <div class="box-header with-border">

  <h3 class="box-title">
    <i class="fa fa-globe"></i>#Hotel-UNI  Listado de Habitaciones
            
  </h3>



<div class="box-body">
 
  
      <%= link_to new_room_path, class: "btn btn-primary" do %>
      <span class="fa fa-fw fa-bed"></span>
       Nueva Habitacion
      <%end%>
  
</div>
  <div class="box-body">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Imagenes</th>

        <th>Identificador</th>
    
        <th>Tipo de Habitacion</th>
    
        <th>Estado</th>
    
        <th>Capacidad</th>
        <th>Comforts</th>
        <th></th>
    
        
   
      </tr>
    </thead>

    <tbody>
  
      <% @rooms.each do |room|%>
    <tr >
       <td>
         <% Photo.where("#{:room_id} = ?" , room.id).each do |p|%>
         <a  href= "<%=p.my_file.url%>"  class="image-popup">
         <%= image_tag p.my_file.url,:width => 50, :height => 50%>
         </a>
         <%end%>
        </td>

                
                              
        <td><%= room.identificador %></td>

        <td><%= room.type_of_room_tipo %></td>
    
        <td><%= room.state_descripcion %></td>
    
        <td><%= room.capacidad %></td>
        <td><%= room.comfort_descripcion %></td>

        <td align="center"><%= link_to '', room,class: "btn btn-primary glyphicon glyphicon-eye-open"%>
        <%= link_to '', edit_room_path(room), class: "btn btn-warning glyphicon glyphicon-pencil"%>
        <%= link_to '', room, method: :delete, data: { confirm: 'Are you sure?'},class: "btn btn-danger glyphicon glyphicon-trash" %></td>

     </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
  
  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">
         <nav><%= paginate @rooms, :theme => 'twitter-bootstrap-3' %></nav>
    </ul>
    
  </div>
      


 </div>


