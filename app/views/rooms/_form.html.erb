<%= form_for(@room, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @room.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h4>

      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :type_of_room, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :type_of_room, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :state, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :state, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :capacidad, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :capacidad, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :identificador, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :identificador, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
