					<%= form_tag diary_book_diario_path ,remote: true, method: :post , id: "search_conta" do %>
					<%= text_field_tag :search_conta, params[:search_conta],class: "form-control"%>
					<%= button_tag(type: :submit, class: "btn btn-primary no-print " ) do %>
					<i class="glyphicon glyphicon-search"></i>
					<% end %>
					<%end%>

				</form>
				<%= link_to ''.html_safe, '#', class: "btn btn-primary no-print glyphicon glyphicon-print alineado_balance", onclick: 'window.print();return false;'%>
