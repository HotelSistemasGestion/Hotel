<!-- Modal -->
<div class="modal fade" id="show-modal">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Cambios</h4>
      </div>
      
      <div class="modal-body">          
          <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <% if @audited_table.action == 'update' %>          
                <th>Atributo</th>
                <th>Valor Anterior</th>
                <th>Valor Nuevo</th>                          
            <% else %>         
                <th>Atributo</th>
                <th>Valor</th>                                       
            <% end %>
          </tr>
        </thead>
        <tbody>          
            <% @audited_table.audited_changes.each do |clave, valor| %>
              <tr>
                <% if @audited_table.action == 'update' %>                
                    <td><%= clave.capitalize %></td>
                    <td><%= valor.first %></td>
                    <td><%= valor.last %></td>                              
                <% else %>             
                    <td><%= clave.capitalize %></td>
                    <td><%= valor %></td>                
                    <!--Se formatea el total en formato local -->                
                <% end %> 
              </tr>             
            <% end %>
        </tbody>
      </table>
    </div>         

      </div>

      <div class="modal-footer">
          <button type="button" class="btn btn-primary btn-lg" data-dismiss="modal">Aceptar</button>
      </div>

    </div>      
  </div>
</div>