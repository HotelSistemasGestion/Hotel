
<div class="row">
  <div class="col-xs-4">
    <div class="report_header">
      <%=image_tag("logo.png", size: "130x130", class: "hide")%>
    </div>
  </div>
  <div class="col-xs-4" >
  <div class="box-header with-border report_title">
  <h1 class="box-title hide">Listado de Servicios</h1>
  </div>
  </div>
  <div class="col-xs-4">
    <div class="report_information">
      <p class="hide"><%= Time.now.strftime("%m/%d/%Y %T")%></p>
      <p class="hide">Impreso por: <%= current_user.username %></p>
    </div>
  </div>
</div>

<div class="box box-primary">
<div class="box-header">
<div class="row">
<%= form_for_filterrific @filterrific do |f| %>


   
    <div class="col-xs-3">
     <div class="hide">
    Servicio:
    </div>
   <%= f.select(:sorted_by_service,
      @filterrific.select_options[:sorted_by_service],
      { include_blank: 'Todas los Servicios' },{ :class => 'form-control' })%>
    </div>

    <div class="col-xs-3">
     <div class="hide">
    Precio desde:
    </div>
    <%= f.text_field(:sorted_by_price_lw, class: 'filterrific-periodically-observed form-control',placeholder:"Precio desde")%>
    </div>
     <div class="col-xs-3">
      <div class="hide">
     Precio hasta:
     </div>
    <%= f.text_field(:sorted_by_price_gt, class: 'filterrific-periodically-observed form-control',placeholder:"Precio hasta")%>
    </div>
    
   <%= render_filterrific_spinner %>
<% end %>
</div>
</div>
</div>
<%= render(
  partial: 'services/list',
  locals: { services: @services }
) %>
