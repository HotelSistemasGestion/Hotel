<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Servicios</h1>
    </div>
  </div>

  <div class="row">
      <div class="col-sm-10 col-sm-offset-1 text-right">
        <%= link_to 'Nuevo Servicio', new_service_path, class: "btn btn-primary" %> </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @services.each do |service| %>
            <%= render "row", service: service %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>