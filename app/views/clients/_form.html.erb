<div id="product-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= title %></h4>
      </div>
      <%= form_for @client, remote: true do |f| %>        
        <div class="modal-body">

          <div class="form-group">

            <div class="row">

              <div class="col-md-6">                
                  <%= f.text_field :nombre, class: "form-control input-lg", placeholder: "Nombre" %>                                     
              </div>

              <div class="col-md-6">                
                  <%= f.text_field :apellido, class: "form-control input-lg", placeholder: "Apellido" %>                          
              </div>  

            </div>  
          </div>

          <div class="form-group">

            <div class="row">

              <div class="col-md-6">
                <%= f.text_field :cedula, class: "form-control input-lg", placeholder: "Cedula" %>
              </div>

              <div class="col-md-6">
                <%= f.text_field :telefono, class: "form-control input-lg", placeholder: "Telefono" %>
              </div>

            </div>
                      
          </div>   
           
          <div class="form-group">
            <%= f.text_field :email, class: "form-control input-lg", placeholder: "Email" %>      
          </div> 

          <div class="form-group">
            <%= f.text_area :direccion, class: "form-control input-lg", placeholder: "Direccion" %>          
          </div> 

        </div><!-- /.modal-body -->

        <div class="modal-footer">
          <%= f.submit 'Aceptar', class: "btn btn-primary btn-lg" %>
        </div>
        
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->