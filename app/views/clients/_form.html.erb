
<div id="product-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Cliente</h4>
      </div>
      <%= form_for @client, remote: true, data: {toggle:"validator"} do |f| %>        
        <div class="modal-body">

          <div class="form-group">

            <div class="row">

              <div class="form-group has-feedback col-md-6">  
                  <%= f.label :Nombre %>
                  <%= f.text_field :nombre, class: "form-control input-lg", placeholder: "Nombre",minlength:2,maxlength:100,:required=>true %>
            <span id="alerta span"class="glyphicon form-control-feedback" aria-hidden="true"></span>
            <!--div class="help-block with-errors">*requerido</div-->
              </div>

              <div class="form-group has-feedback col-md-6">    
                  <%= f.label :Apellido %>            
                  <%= f.text_field :apellido, class: "form-control input-lg", placeholder: "Apellido",minlength:2,maxlength:100,:required=>true %>
            <span id="alerta span"class="glyphicon form-control-feedback" aria-hidden="true"></span>
            <!--div class="help-block with-errors">*requerido</div-->
              </div>  

            </div>  
          </div>

          <div class="form-group">

            <div class="row">
            
              <div class="form-group has-feedback col-md-4">
                  <%= f.label :Cedula %>
                <%= f.text_field :cedula, class: "form-control input-lg", placeholder: "Cedula",minlength:2,maxlength:100,:required=>true %>
            <span id="alerta span"class="glyphicon form-control-feedback" aria-hidden="true"></span>
            <!--div class="help-block with-errors">*requerido</div-->
              </div>

              <div class="form-group has-feedback col-md-4">
                  <%= f.label :Telefono %>
                <%= f.text_field :telefono, class: "form-control input-lg", placeholder: "Telefono",minlength:2,maxlength:100,:required=>true %>
            <span id="alerta span"class="glyphicon form-control-feedback" aria-hidden="true"></span>
            <!--div class="help-block with-errors">*requerido</div-->
              </div>

              <div class="form-group has-feedback col-md-4">
                  <%= f.label :RUC %>
                <%= f.text_field :ruc, class: "form-control input-lg", placeholder: "RUC", minlength:2,maxlength:100,:required=>true %>
            <span id="alerta span"class="glyphicon form-control-feedback" aria-hidden="true"></span>
            <!--div class="help-block with-errors">*requerido</div-->
              </div>
            </div>
          </div> 
           
          <div class="form-group has-feedback">
            <%= f.label :Email %>
            <%= f.text_field :email, class: "form-control input-lg", placeholder: "Email", :required=>true %>
            <span id="alerta span"class="glyphicon form-control-feedback" aria-hidden="true"></span>
            <!--div class="help-block with-errors">*requerido</div-->
          </div> 


          <div class="form-group has-feedback">
            <%= f.label :Direccion %>
            <%= f.text_area :direccion, class: "form-control", placeholder: "Direccion",minlength:2,maxlength:100,:required=>true %>
            <span id="alerta span"class="glyphicon form-control-feedback" aria-hidden="true"></span>
            <!--div class="help-block with-errors">*requerido</div-->
          </div>

        </div><!-- /.modal-body -->

        <div class="modal-footer">
          <%= f.submit 'Aceptar', class: "btn btn-primary btn-lg" %>
        </div>
        
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->