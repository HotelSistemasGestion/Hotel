<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Clientes</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 text-right">
      <%= link_to 'Nuevo Cliente', new_client_path, remote: true, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <table id="cli_table" class="table table-striped table-hover">
        <thead>
          <tr>
            <th>RUC</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Cedula</th>                                                
          </tr>
        </thead>
        <tbody>
          <% @clients.each do |client| %>
            <%= render "row", client: client %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>