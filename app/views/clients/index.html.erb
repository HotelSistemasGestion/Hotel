<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Clientes</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 text-right">
      <%= link_to 'Nuevo Cliente', new_client_path, remote: true, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>RUC</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Cedula</th>                                                
          </tr>
        </thead>
        <tbody id="cli_id">
          <% @clients.each do |client| %>
            <%= render "row", client: client %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



<div id="product-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Cliente</h4>
      </div>
      <%= form_for @client, remote: true, data: {toggle:"validator"} do |f| %>        
        <div class="modal-body">

          <div class="form-group">

            <div class="row">

              <div class="col-md-6">  
                  <%= f.label :Nombre %>
                  <%= f.text_field :nombre, class: "form-control input-lg", placeholder: "Nombre", data: { :validation => "required validate_max_length length50", "validation-error-msg" => "No puede dejar este campo vacÃ­o." } %>                                     
              </div>

              <div class="col-md-6">    
                  <%= f.label :Apellido %>            
                  <%= f.text_field :apellido, class: "form-control input-lg", placeholder: "Apellido" %>                          
              </div>  

            </div>  
          </div>

          <div class="form-group">

            <div class="row">
            
              <div class="col-md-6">
                  <%= f.label :Cedula %>
                <%= f.text_field :cedula, class: "form-control input-lg", placeholder: "Cedula" %>
              </div>

              <div class="col-md-6">
                  <%= f.label :Telefono %>
                <%= f.text_field :telefono, class: "form-control input-lg", placeholder: "Telefono" %>
              </div>

            </div>
                      
          </div>   
          
          <div class="form-group">
            <div class="row">
              <div class="col-md-6">
                  <%= f.label :RUC %>
                <%= f.text_field :ruc, class: "form-control input-lg", placeholder: "RUC" %>
              </div>
            </div>
          </div> 
           
          <div class="form-group">
                  <%= f.label :Email %>
            <%= f.text_field :email, class: "form-control input-lg", placeholder: "Email" %>      
          </div> 

          <div class="form-group">
                  <%= f.label :Direccion %>
            <%= f.text_area :direccion, class: "form-control input-lg", placeholder: "Direccion" %>          
          </div>

          <div class="form-group has-feedback col-sm-6">
          <%= f.label "Indentificador", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :direccion, class: "form-control",minlength:2,maxlength:12,:required=>true %>
            <span id="alerta span"class="glyphicon form-control-feedback" aria-hidden="true"></span>
            <div class="help-block with-errors">*requerido</div>
          </div>
        </div> 

        </div><!-- /.modal-body -->

        <div class="modal-footer">
          <%= f.submit 'Aceptar', class: "btn btn-primary btn-lg" %>
        </div>
        
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->