<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><center>Clientes</center></h3>
    <%= link_to 'Nuevo Cliente', new_client_path, remote: true, class: "btn btn-primary pull-right" %> 
  </div>
  <div class="box-body">

    <div class="container">

      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>RUC</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Cedula</th>                                                
              </tr>
            </thead>
            <tbody id="cli_id">
              <% @clients.each do |client| %>
                <%= render "row", client: client %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>


    </div>
    
  </div>
</div>