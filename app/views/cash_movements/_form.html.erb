<%= nested_form_for(@cash_movement, html: { class: "form-horizontal", role: "form" },data: {toggle:"validator"}) do |f| %>
  <% if @cash_movement.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@cash_movement.errors.count, "error") %> prohibited this cash_movement from being saved:</h4>

      <ul>
      <% @cash_movement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <% id = "#"+"#{f.object_name}[client_id]".gsub(/(\])?\[/, "_").chop %>
  <% id_apertura = "#"+"#{f.object_name}[opening_cash_id]".gsub(/(\])?\[/, "_").chop %>
  <div class="col-md-4">
    <%= f.label 'Apertura' ,class: "col-sm-2" %><br>
    <%= f.text_field :opening_cash,id: "apertura", class: "form-control col-md-2",:value => @apertura.fecha_apertura,:readonly => true %>
    <%= f.hidden_field  :opening_cash_id, :value => @apertura.id%>
  </div>

  <div class="col-md-4">
    <%= f.label 'Cliente' %><br>
    <%= f.autocomplete_field :client, autocomplete_client_cedula_clients_path,:update_elements => {:id => id}, class:"form-control", placeholder: "Ingrese numero de cedula", :required => true %>
    <%= f.hidden_field  :client_id%>
  </div>

  <div class="col-md-4">
    <%= f.label 'Tipo de movimiento' %><br>
    <%= f.select :type_of_cash_movement_id ,TypeOfCashMovement.all.collect { |t| [t.descripcion, t.id ] },{include_blank: false},class: "form-control",:required => true %>
  </div>
</div>

      <br></br>
        <div class="box box-default box-solid collapsed-box">
          <div class="box-header with-border">
            <h3 class="box-title"><center>Detalles de Movimientos</center></h3>
              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                </button>
              </div>
          </div>
            <div class="box-body" style="display: none;">
            <div class="table-responsive well">
            <table class="table table-striped table-bordered table-hover">
            <thead class="thead-inverse">
              <tr>
                <th>Factura Numero</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <%= f.fields_for :detail_of_cash_movements  ,:wrapper => false do |li| %>
              <tr class="fields">
                  <td scope="row">
                    <%= li.number_field :invoices ,:class => "form-control"%>
                  </td>
                  <td>
                    <%= li.number_field :sub_monto, :class => "form-control subtotal"%>
                  </td>
                  <td>
                    <%= li.link_to_remove "", :class => "btn btn-danger glyphicon glyphicon-trash " %>
                  </td>              
              </tr>
              <%end%>
              
              <tr>
                <td>
                  <%= f.link_to_add "", :detail_of_cash_movements , :class => "btn btn-primary glyphicon glyphicon-plus"%>
                </td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
</div>
        

        <div class="box box-default box-solid collapsed-box">
          <div class="box-header with-border">
            <h3 class="box-title"><center>Valores</center></h3>
              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                </button>
              </div>
          </div>
          <div class="box-body" style="display: none;">
            <div class="table-responsive well">
              <table class="table table-striped table-bordered table-hover">
                <thead class="thead-inverse">
                  <tr>
                    <th>Valor</th>
                    <th>Subtotal</th>   
                  </tr>
                </thead>

                <tbody>
                <%= f.fields_for :payment_types  ,:wrapper => false do |li| %>
              <tr class="fields">    
                <td class="col-sm-4">
                  <%= li.select :descripcion, PaymentType.all.collect{|p| [p.descripcion, p.id]},{include_blank: false}  ,:class => "form-control select"%></td>
                <td class="col-sm-4"><%= li.number_field :banco, :class => "form-control "%></td>
                  
                <td class="detalle" id="detalle-<%= li.index%>" style="display: none">
                  <%= li.text_field :banco, :style => "display: none", :class => "form-control cheque" ,placeholder: "Banco"%>
                  
                  <%= li.text_field :titular, :style => "display: none",:class => "form-control cheque" ,placeholder: "Titular"%>  
                  
                  <%= li.text_field :fecha_disponibilidad, :style => "display: none",:class => "form-control datepicker cheque" ,placeholder: "Fecha Disponibilidad"%> 
                     
                  <%= li.text_field :tarjeta_tipo, :style => "display: none", :class => "form-control tarjeta" ,placeholder: "Tipo Tarjeta"%>
                    
                  <%= li.text_field :n_cheque, :style => "display: none", :class => "form-control tarjeta" ,placeholder: "Numero Verificacion"%>
                  
                </td>
                <td>
                  <%= li.link_to_remove "", :class => "btn btn-danger glyphicon glyphicon-trash " %>
                </td>               
              </tr>
              <%end%>
              
              <tr>
                <td><%= f.link_to_add "", :payment_types , :class => "btn btn-primary glyphicon glyphicon-plus"%></td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>  
    <div class="row">
      <div class="col-sm-10">
        <div class="form-group">
          <div class="col-md-offset-7 col-md-4">
            <%= f.label :Total %><br>
            <%= f.text_field :monto_total, class: "form-control total",  :readonly => true,placeholder: "" %>
          </div>    
        </div>
      </div>         
    </div>
    <div class="box-footer">
      <div class="col-sm-offset-8 col-sm-10">
        <%= f.submit "Aceptar", class: "btn btn-primary " %>
      </div>
    </div>
  </div>

  <% end %>
