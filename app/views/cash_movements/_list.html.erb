<div id="filterrific_results">
<div class="box-body">
<div id="filterrific_results">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
          
              <th>Fecha</th>

              <th>Tipo de Movimiento</th>
          
              <th>Cliente</th>

              <th>Monto Total</th>
          
          
              <th></th>

            </tr>
          </thead>

          <tbody>
            <%= content_tag_for(:tr, @cash_movements) do |movement| %>
          
              <td><%= movement.fecha %></td>
          
              <td><%= movement.type_of_cash_movement.descripcion %></td>
          
              <td><%= movement.client.name %></td>

              <td><%= number_to_currency_py(movement.monto_total) %></td>

              
              <td align="right"><%= link_to @cash_movement,remote: true, class: 'btn btn-primary', title: 'Ver', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-eye-open"></span>
                    <% end %></td>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
  </div>

  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">
         <nav><%=paginate @cash_movements, :theme => 'twitter-bootstrap-3' %></nav>
    </ul>
    
  </div>
</div>