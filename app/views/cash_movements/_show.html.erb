
<div id="invoice-modal" class="modal fade">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>        
        <div class="modal-body">
          <div class="alert alert-danger" role="alert" style="display: none;"></div>
          <div class="form-group"> 

          </div>

          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>Apertura: </label>
                <%= OpeningCash.find(@cash_movement.opening_cash_id).fecha_apertura %>            
              </div> 
               
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label>Cliente: </label>
                <%= Client.find(@cash_movement.client_id).name %>            
              </div>  
            </div>
          <div class="col-md-4">
              <div class="form-group">
                <label>Tipo Movimiento: </label>
                <%= TypeOfCashMovement.find(@cash_movement.type_of_cash_movement_id).descripcion %>            
              </div>  
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title"><center><strong>Detalles</strong></center></h3>
                </div>
                <div class="panel-body">
                  <div class="table-responsive">
                    <table class="table table-condensed">
                      <thead>
                        <tr>
                          <td><strong>Factura NÂº</strong></td>
                          <td style="margin-left: 20px;" class="text-center"><strong>Subtotal</strong></td>
                        </tr>
                      </thead>
                      <tbody>                           
                        <% @cash_movement.detail_of_cash_movements.each do |details| %>                 
                          <tr>
                            <td><%= Invoice.find(details.invoice_id).numero %></td>                          
                            <td style="margin-left: 80px;" class="text-center"><%= number_to_currency_py(details.sub_monto) %></td>  
                          </tr>
                        <%end%>  
                      </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-8"> 
              <div class="form-group text-right">
                <strong>Total: </strong>           
              </div> 
          </div>
          <div class="col-md-4">        
            <p><%= number_to_currency_py(@cash_movement.monto_total) %></p>
          </div>
        </div><!-- /.tabla-content -->
      </div>
      <div class="modal-footer">
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->