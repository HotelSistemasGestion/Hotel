<p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-sm-12">
      <div class="box">   
        <div class="box-header">
          <div class="col-sm-2"></div>
          <h3 class="box-title col-sm-6">
            Movimientos de Caja
          </h3>
          <% if current_user.has_role? "Cajero" or current_user.has_role? "Admin" %>                           
            <%= link_to 'Nuevo Movimiento', new_cash_movement_path, class: "btn btn-primary" %>
          <% end %>                     
        </div> 
        
        <div class="box-body">
          <div class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
              <div class="col-sm-6"></div>
              <div class="col-sm-6"></div>
            </div>
            
            <div class="row">
              <div class="col-sm-offset-1 col-sm-9">
                <table class="table table-bordered table-hover dataTable">
                  <thead>
                    <tr role="row">
                      <th>Fecha</th>
                      <th>Tipo de Movimiento</th>
                      <th>Cliente</th>
                      <th>Monto Total</th> 
                      <th></th>  
                    </tr>
                  </thead>
                  <tbody>
                    <% @cash_movements.each do |cash_movement| %>
                    <%= render "row", cash_movement: cash_movement %>
                    <% end %>
                  </tbody>  
                </table>
              </div>  
            </div>
          </div>
        </div>
      </div>  
    </div>
  </div>
