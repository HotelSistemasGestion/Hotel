<div class="page-header">
  <%= link_to new_account_detail_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Account detail
  <% end %>
  <h1>Listing account_details</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Account</th>
            <th>Service</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Subtotal</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @account_details) do |account_detail| %>
            <td><%= account_detail.account_id %></td>
            <td><%= account_detail.service_id %></td>
            <td><%= account_detail.cantidad %></td>
            <td><%= account_detail.precio %></td>
            <td><%= account_detail.subtotal %></td>
            <td><%= link_to 'Show', account_detail %></td>
        <td><%= link_to 'Edit', edit_account_detail_path(account_detail) %></td>
        <td><%= link_to 'Destroy', account_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
