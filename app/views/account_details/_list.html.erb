
<div id="filterrific_results">



<div class="box box-primary">
 <div class="box-header with-border no-print"  style="text-align:center">
  <h1 class="box-title">Listado de servicios dentro de una habitacion</h1>
   <div class="input-group-control pull-right">
   
       <%= link_to "Imprimir", '#', class: "btn btn-primary no-print", 
            onclick: 'window.print();return false;' %>
    

    </div>
  </div>

<div class="box-body no-print">
   <div id="filterrific_results">
  <table class="table table-striped table-bordered table-hover">
  <colgroup>
    <col style="width:15%">
    <col style="width:25%">
    <col style="width:15%">
    <col style="width:15%">
    <col style="width:15%">
    <col style="width:15%">
  </colgroup>
    <thead>
      <tr>
        <th>Habitacion</th>
        <th>Servicio</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Subtotal</th>
        <th>Fecha solicitada</th>
      </tr>
    </thead>

   
    <tbody>
    
    
      <%= content_tag_for(:tr, @account_details.order(id: :desc)) do |account_detail| %>
       <td><%= ReservationRoom.find_by(reservation: (Account.find(account_detail.account_id)).reservation_id).room.identificador %></td>
       <td><%= account_detail.servicio %></td>
       <td><%= account_detail.precio %></td>
       <td><%= account_detail.cantidad %></td>
       <td><%= account_detail.subtotal %></td>
       <td><%= account_detail.created_at.strftime("%F %T") %></td>
    <% end %>
    
    </tbody>
     
  </table>
  <div class="box-footer clearfix" style="margin-right:-10px">
    <ul class="pagination pagination-sm no-margin pull-right">
    <%= will_paginate @accounts_details, renderer: BootstrapPagination::Rails, :container => false %>
    </ul>
    </div>
  </div>
 
 
 

</div>

