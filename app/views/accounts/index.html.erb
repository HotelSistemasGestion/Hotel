<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Cuentas</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 text-right">
      <%= link_to 'Nueva Cuenta', new_account_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>Cliente</th>
            <th>Direccion</th>
            <th>Fecha entrada</th>
            <th>Fecha salida</th>
            <th>Total</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @accounts.each do |account| %>
            <tr>              
              <td><%= account.client.nombre + ' '+account.client.apellido %></td>
              <td><%= account.client.direccion %></td>
              <td><%= account.fecha_entrada %></td>
              <td><%= account.fecha_salida %></td>
              <td><%= account.total %></td>
              <td><%= link_to 'Show', account %></td>
              <td><%= link_to 'Edit', edit_account_path(account) %></td>
              <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
