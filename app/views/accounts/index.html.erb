<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><center>Cuentas</center></h3>
    <a href="<%=new_account_path%>" class="btn btn-primary pull-right" role="button"><i class='glyphicon glyphicon-list-alt'> </i> Nueva Cuenta</a> 
  </div>
  <div class="box-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Cliente</th>
            <th>Direccion</th>
            <th>RUC</th>
            <th>Fecha entrada</th>
            <th>Fecha salida</th>
            <th>Total</th>
            <th>NÂ° de Factura</th> 

            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @accounts.each do |account| %>
            <tr>              
              <td><%= account.nombre %></td>
              <td><%= account.direccion %></td>
              <td><%= account.ruc %></td>
              <td><%= account.fecha_entrada %></td>
              <td><%= account.fecha_salida %></td>
              <td><%= account.total %></td>
              <%if account.numero.present? %> 
                <td><%= account.numero %></td>
              <% else %> 
                <td><label font-style: oblique>-No facturado-</label></td>
              <%end%>
              <td><%= link_to account, class: 'col-sm-2', title: 'Ver Cuenta', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                <span class= "glyphicon glyphicon glyphicon-eye-open"></span>
              <% end %></td>
              <td><%= link_to account, method: :delete, data: { confirm: 'Esta seguro?' }, class: 'col-sm-2', title: 'Eliminar Cuenta', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                  <span class= "glyphicon glyphicon glyphicon-trash"></span>
              <% end %></td>
              <%if !account.numero.present? %> 
                <td><%= link_to edit_account_path(account), class: 'col-sm-2', title: 'Editar Cuenta', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                  <span class= "glyphicon glyphicon glyphicon-edit"></span>
                <% end %></td>
              <% end %>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
