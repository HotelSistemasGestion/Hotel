
<div id="filterrific_results">



<div class="box box-primary">
 <div class="box-header with-border no-print"  style="text-align:center">
  <h1 class="box-title">Listado de clientes</h1>
   <div class="input-group-control pull-right">
   
       <%= link_to "Imprimir", '#', class: "btn btn-primary no-print", 
            onclick: 'window.print();return false;' %>
    

    </div>
  </div>

<div class="box-body no-print">
   <div id="filterrific_results">
  <table class="table table-striped table-bordered table-hover">
  <colgroup>
    <col style="width:10%">
    <col style="width:10%">
    <col style="width:10%">
    <col style="width:10%">
    <col style="width:15%">
    <col style="width:15%">
    <col style="width:10%">
    <col style="width:10%">
    <col style="width:10%">
  </colgroup>
    <thead>
      <tr>
        <th>Cliente</th>
        <th>RUC</th>
        <th>Direccion</th>
        <th>Telefono</th>
        <th>Fecha de entrada</th>
        <th>Fecha de salida</th>
        <th>Habitacion</th>
        <th>Descuento</th>
        <th>Total</th>
      </tr>
    </thead>

   
    <tbody>
    
    
      <%= content_tag_for(:tr, @accounts.order(id: :desc)) do |account| %>
       <td><%= account.nombre%></td>
        <td><%= account.ruc%></td>
        <td><%= account.direccion%></td>
        <td><%= account.telefono%></td>
        <td><%= ReservationRoom.find(account.reservation_id).check_in%></td>
        <td><%= ReservationRoom.find(account.reservation_id).check_out%></td>
       <td><%= ReservationRoom.find(account.reservation_id).room.identificador%></td>
       <td><%= account.descuento%></td>
       <td><%= account.total%></td>
    <% end %>
    
    </tbody>
     
  </table>
  <div class="box-footer clearfix" style="margin-right:-10px">
    <ul class="pagination pagination-sm no-margin pull-right">
    <%= will_paginate @accounts, renderer: BootstrapPagination::Rails, :container => false %>
    </ul>
    </div>
  </div>
 
 
 

</div>

