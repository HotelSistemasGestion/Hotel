<%= form_for(@account) do |f| %>
  <section class="account">
      <!-- title row -->
      <div class="row">
      <!-- info row -->
      <div class="row invoice-info">
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
          <div class="row">
            <div class="col-sm-12">
              <%= f.label 'Cliente:', class: "col-sm-3 control-label" %>              
              <%= f.autocomplete_field :client, autocomplete_client_cedula_clients_path, class:"col-sm-7", placeholder: "Ingrese numero de cedula", :multiple => false, :update_elements => {:ruc => '#ruc', :direccion => '#direccion', :telefono => '#telefono', :email => '#correo'}  %>

              <%= link_to new_client_path, remote: true, class: 'col-sm-2', title: 'Registrar Nuevo Cliente', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon glyphicon-plus"></span><span class= "glyphicon glyphicon glyphicon-user"></span>
                    <% end %> 

            </div>
            <div class="col-sm-12">
              <%= f.label 'RUC:', class: "col-sm-3 control-label" %>
              <%= f.text_field :ruc, id: 'ruc', class:"col-sm-8", placeholder: "RUC"%>                            
                 

            </div>
            <div class="col-sm-12">
              <%= f.label 'Direccion:', class: "col-sm-3 control-label" %>        
              <%= f.text_field :direccion, id: 'direccion', class:"col-sm-6", placeholder: "Barrio" %>
            </div>
            <div class="col-sm-12">
              <%= f.label 'Celular:', class: "col-sm-3 control-label" %>        
              <%= f.text_field :fecha_entrada, id: 'telefono', class:"col-sm-5",placeholder: "Celular" %>
            </div>  
            <div class="col-sm-12">
              <%= f.label 'Correo:', class: "col-sm-3 control-label" %>        
              <%= f.text_field :fecha_entrada, id: 'correo', class:"col-sm-8",  placeholder: "Email" %>
            </div>                                             
          </div>                              
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
          <div class="row">
            <%= f.label 'Check-in:', class: "col-sm-4 control-label" %>            
            <%= f.text_field :fecha_entrada, id: "date", class: "datepicker"%>
            <label id="bt1" class="btn btn-default" role="button" title="Hoy"><span class= "fa fa-calendar-check-o"> Hoy</span></label>  
          </div>
          <br>
          <div class="row">
            <%= f.label 'Check-out:', class: "col-sm-4 control-label" %>            
            <%= f.text_field :fecha_salida, class: "datepicker"%>  
          </div>
          <br> 
          <div class="row">
              <%= f.label 'Habitacion:', class: "col-sm-4 control-label" %>
              <%= f.text_field :room_id, class:"col-sm-7", placeholder: "Numero de Factura" %>                      
          </div>         
          <br>
          <div class="row">
              <%= f.label 'Descripcion:', class: "col-sm-4 control-label" %>
              <%= f.text_field :room_id, class:"col-sm-2", placeholder: "%" %>                                          
          </div>              
        </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

      <!-- Table row -->
      <div class="row">
        <div class="col-xs-12 table-responsive">
          <table class="table table-striped">
            <thead>
            <tr>
              <th>Cantidad</th>
              <th>Servicio</th>
              <th>Descripcion</th>
              <th>Subtotal</th>
            </tr>
            </thead>
            <tbody>
            
              <!-- acÃ¡ va a ir el nested_form -->

            </tbody>
          </table>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

      <div class="row">
        <!-- /.col -->
        <div class="col-md-6 col-md-offset-6">

          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <th>Subtotal:</th>
                  <td>Gs. 0</td>
                </tr>
                <tr>
                  <th>Descuento: </th>
                  <td>Gs. 0</td>
                </tr>            
                <tr>
                  <th>Total:</th>
                  <td>Gs. 0</td>
                </tr>
              </tbody>
            </table>
          </div>

        </div>
      </div>
        <!-- /.col -->
  </section>
<% end %>    

<script type="text/javascript">
  $('#bt1').click(function() {
    $('#date').val('<%= Time.now.strftime("%d-%m-%Y") %>');      
  }); 
</script>