<%= nested_form_for(@account, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <section class="account">
      <!-- title row -->
      <div class="row">
      <!-- info row -->
      <div class="row invoice-info">
        <!-- /.col -->
        <div class="col-sm-6 invoice-col">
          <div class="row">
            <div class="col-sm-12">
              <%= f.label 'Cliente:', class: "col-sm-3 control-label" %>              
              <%= f.autocomplete_field :nombre, autocomplete_client_cedula_clients_path, class:"col-sm-7", placeholder: "Ingrese numero de cedula", :multiple => false, :update_elements => {:id => '#cli_id', :ruc => '#ruc', :direccion => '#direccion', :telefono => '#telefono', :email => '#correo'}  %>

              <%= link_to new_client_path, remote: true, class: 'col-sm-2', title: 'Registrar Nuevo Cliente', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon glyphicon-plus"></span><span class= "glyphicon glyphicon glyphicon-user"></span>
                    <% end %> 
              <%= f.hidden_field :client_id, id: 'cli_id' %>

            </div>
            <div class="col-sm-12">
              <%= f.label 'RUC:', class: "col-sm-3 control-label" %>
              <%= f.text_field :ruc, id: 'ruc', class:"col-sm-5", placeholder: "RUC", readonly: true %>                            
                 

            </div>
            <div class="col-sm-12">
              <%= f.label 'Direccion:', class: "col-sm-3 control-label" %>        
              <%= f.text_field :direccion, id: 'direccion', class:"col-sm-5", placeholder: "Barrio", readonly: true %>
            </div>
            <div class="col-sm-12">
              <%= f.label 'Telefono:', class: "col-sm-3 control-label" %>        
              <%= f.text_field :telefono, id: 'telefono', class:"col-sm-5",placeholder: "Celular", readonly: true %>
            </div>  
            <div class="col-sm-12">
              <%= f.label 'Correo:', class: "col-sm-3 control-label" %>        
              <%= f.text_field :correo, id: 'correo', class:"col-sm-8",  placeholder: "Email", readonly: true %>
            </div>                                             
          </div>                              
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
          <div class="row">
            <%= f.label 'Check-in:', class: "col-sm-4 control-label" %>            
            <%= f.text_field :fecha_entrada, id: "date", class: "datepicker"%>
            <label id="bt1" class="btn btn-default" role="button" title="Hoy"><span class= "fa fa-calendar-check-o"> Hoy</span></label>  
          </div>
          <br>
          <div class="row">
            <%= f.label 'Check-out:', class: "col-sm-4 control-label" %>            
            <%= f.text_field :fecha_salida, class: "datepicker"%>  
          </div>
          <br> 
          <div class="row">
              <%= f.label 'Habitacion:', class: "col-sm-4 control-label" %>
              <%= f.autocomplete_field :identificador_hab, autocomplete_room_identificador_rooms_path, class:"col-sm-7", placeholder: "Ingrese Identificador", :multiple => false, :update_elements => {:id => '#room_id', :type_of_room_id => '#tipo', :state_id => '#estado'}  %>


              <%= f.hidden_field :room_id, id: 'room_id' %>
          </div>         
          <br>
          <div class="row">
              <%= f.label 'Tipo de Habitacion:', class: "col-sm-4 control-label" %>
              <input id="tipo" class="col-sm-7">                                             
          </div> 
          <div class="row">
              <%= f.label 'Estado de Habitacion:', class: "col-sm-4 control-label" %>
              <input id="estado" class="col-sm-7">                                                                             
          </div>              
        </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

      <!-- Table row -->
      <div class="row">
        <div class="col-xs-12 table-responsive">
          <table class="table table-striped" id="table">
            <thead>
            <tr>
              <th>Cantidad</th>
              <th>Servicio</th>
              <th>Precio</th>
              <th>Subtotal</th>
            </tr>
            </thead>
            <tbody>
        
              <%= f.fields_for :account_details  ,:wrapper => false do |li| %>
              <tr class="fields">

                  <% cantidad = "#"+"#{li.object_name}[cantidad]".gsub(/(\])?\[/, "_").chop %>
                  <% ayudante = "#"+"#{li.object_name}[ayudante]".gsub(/(\])?\[/, "_").chop %>
                  <% id = "#"+"#{li.object_name}[service_id]".gsub(/(\])?\[/, "_").chop %>

                  <th scope="row"><%= li.number_field :cantidad ,min: 1 ,:class => "escuchable",value: 1%></th>          
                  
                  <td><%= li.autocomplete_field :service, autocomplete_service_nombre_services_path, :placeholder => "Seleccione un servicio", 
                  :multiple => true, :update_elements => {:id => id,:precio => ayudante },class: "ui-autocomplete-input"%>
                  <%= li.hidden_field  :service_id%></td>
                  <td><%= li.number_field  :ayudante,class: "escuchable",readonly: true%></td>
                  <td><%= li.number_field :subtotal,:class => "subtotal",readonly: true%></td>
                  <td><%= li.link_to_remove "",id: "borrar", :class => "btn glyphicon glyphicon-trash", title: 'Eliminar detalle', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' %></td>
              </tr>
              <%end%>
              <tr>
                <td><%= f.link_to_add "", :account_details , :class => "btn glyphicon glyphicon-plus", title: 'Agregar detalle', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth'%></td>
              </tr>

          </tbody>
          </table>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

      <div class="row">
        <!-- /.col -->
        <div class="col-md-6 col-md-offset-6">

          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <th>Subtotal:</th>
                  <td><%= f.text_field :subtotal,readonly: true, id: "subtotal"%></td>
                </tr>
                <tr>
                  <th>Descuento: </th>
                  <td><%= f.number_field :descuento ,min: 0, max: 100, id: "descuento"%></td>
                </tr>            
                <tr>
                  <th>Total:</th>
                  <td><%= f.text_field :total,readonly: true, id: "total"%></td>
                </tr>
              </tbody>
            </table>
          </div>

        </div>
      </div>
      <div class="row no-print">
        <div class="col-xs-12">
            <%= f.submit 'Guardar', class: "btn btn-success pull-right" %>
            <a href="<%=accounts_path%>" class="btn btn-default" role="button">Cancelar</a>        
        </div>
      </div>
        <!-- /.col -->
  </section>
<% end %>    

<script type="text/javascript">
  $('#bt1').click(function() {
    $('#date').val('<%= Time.now.strftime("%d-%m-%Y") %>');      
  }); 
</script>