<div class="modal fade" id="show-modal">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4><center>Reservacion</center></h4>
      </div>
      
      <div class="modal-body">   
        <p id="notice"><%= notice %></p>

       <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label>Nombre: </label>
              <%= @reservation.nombre %>            
              </div> 
            <div class="form-group">
                <label>Apellido: </label>
                <%= @reservation.apellido %>            
              </div> 
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label>Email: </label>
                <%=@reservation.email %>            
            </div> 
              <div class="form-group">
                <label>Telefono: </label>
                <%= @reservation.telefono %>            
              </div> 
          </div>

        </div>

        <div class="row">
            <div class="col-md-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title"><center><strong>Habitaciones</strong></center></h3>
                </div>
                <div class="panel-body">
                  <div class="table-responsive">
                    <table class="table table-condensed">
                      <thead>
                        <tr>
                          <td><strong>Tipo de Habitacion</strong></td>
                          <td><strong>Comfort</strong></td>
                          <td><strong>Cuarto</strong></td>
                          <td><strong>Check_in</strong></td>
                          <td><strong>Check_out</strong></td>
                          <td><strong>Subtotal</strong></td>
                        </tr>
                      </thead>
                      <tbody>                                           
                          <% @reservation.reservation_rooms.each do |detalle| %>
                            <tr>
                              <td><%= TypeOfRoom.find(detalle.type_of_room_id).tipo %></td>                          
                              <td><%= Comfort.find(detalle.comfort_id).descripcion %></td> 
                              <td><%= Room.find(detalle.room_id).identificador %></td>
                              <td><%= detalle.check_in.strftime("%d/%m/%Y") %></td> 
                              <td><%= detalle.check_out.strftime("%d/%m/%Y") %></td> 
                              <td><%= number_to_currency_py(detalle.subtotal) %></td>  
                            </tr>
                          <%end%>                       
                      </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label>Total: </label>
              <%= number_to_currency_py(@reservation.total) %>            
            </div> 
          </div>
        </div>

        <!--<p>
          <strong>Cuarto:</strong>
          <%# @reservation.reservation_rooms.each do |a| %>
          <%#= a.room_id%>
          <%#end%>
        </p>-->

      </div>

    </div>

  </div>
</div>

