<%= form_for(@reservation, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @reservation.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation from being saved:</h4>

      <ul>
      <% @reservation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :nombre, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :nombre,value:@my_reservation_requests.nombre, class: "form-control" , :readonly => true%>
    </div>
 
    <%= f.label :apellido, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :apellido,value:@my_reservation_requests.apellido, class: "form-control" , :readonly => true%>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :check_in, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :check_in,value:@my_reservation_requests.check_in, class: "form-control", :readonly => true %>
    </div>
  
    <%= f.label :check_out, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :check_out,value:@my_reservation_requests.check_out, class: "form-control" , :readonly => true%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :type_of_room_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :type_of_room_id, value:@my_reservation_requests.type_of_room_id, class: "form-control", :readonly => true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
