<%=nested_form_for(@reservation, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @reservation.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation from being saved:</h4>

      <ul>
      <% @reservation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :nombre, class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :nombre, value:@my_reservation_requests.nombre,  class: "form-control" %>
      <%#= f.text_field :nombre,  class: "form-control" %>
    </div>

    <%= f.label :apellido, class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :apellido, value:@my_reservation_requests.apellido, class: "form-control" %>
      <%#= f.text_field :apellido, class: "form-control" %>
    </div>
    
  </div>


  <div class="form-group">
    <%= f.label :email, class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :email, value:@my_reservation_requests.email, class: "form-control"%>
      <%#= f.text_field :email, class: "form-control"%>
    </div>

    <%= f.label :dias, class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :dias,value: (@my_reservation_requests.check_out.to_date - @my_reservation_requests.check_in.to_date).to_i, class: "form-control" %>
      <%#= f.text_field :dias, class: "form-control" %>
    </div>
    
  </div>


  <div class="form-group">
    <%= f.label :check_in, class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :check_in, value: @my_reservation_requests.check_in, class: "datepicker form-control"%>
      <%#= f.text_field :check_in, class: "datepicker form-control"%>
    </div>

    <%= f.label :check_out, class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :check_out, value: @my_reservation_requests.check_out, class: "datepicker form-control" %>
      <%#= f.text_field :check_out, class: "datepicker form-control" %>
    </div>
    <!--Consultar el porque-->
    <td><%= f.hidden_field :reservation_request_id,value: @my_reservation_requests.id,readonly: true,class: "form-control"%>
    <td><%= f.hidden_field :budget,value: @my_budgets.id,readonly: true,class: "form-control"%>
  </div>

 <!-- <div class="form-group">
    <%= f.label :room_id, class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :room_id, class: "form-control" %>
    </div>

    <%= f.label :type_of_room_id, class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :type_of_room_id, class: "form-control" %>
    </div>
    
  </div>-->

  <div class="box box-primary box-solid collapsed-box">
            <div class="box-header with-border">
              <h3 class="box-title" style="color:white"><center>Habitaciones</center></h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                </button>
              </div>
            </div>
            <div class="box-body" style="display: none;">
              <div class="table-responsive well">
              <table class="table table-striped table-bordered table-hover services" id="table">
                <thead class="thead-inverse">
                  <tr>
                   <!-- <th>Cantidad.</th>-->
                    <th>Habitacion.</th>
                    <th>Tipo de Habitacion</th>
                    <th>Precio</th>
                   <!-- <th>Subtotal (Gs).</th>-->
                    <th>Eliminar.</th>
                  </tr>
                </thead>
                <tbody>
                    <!-- begin-->
                    <%= f.fields_for :reservation_rooms,:validate => true ,:wrapper => false do |li| %>
                    <tr class="fields">
                        <%# cantidad = "#"+"#{li.object_name}[cantidad]".gsub(/(\])?\[/, "_").chop %>
                        <% subtotal = "#"+"#{li.object_name}[subtotal]".gsub(/(\])?\[/, "_").chop %>
                        <% id = "#"+"#{li.object_name}[type_of_room_id]".gsub(/(\])?\[/, "_").chop %>

                        <%BudgetRoomDetail.all.each do |budget_room| %>
                          <%if budget_room.budget_id == @my_budgets.id %>
                            <td><%= li.select :room_id, Room.all.collect{ |p| [ p.identificador, p.id ] if p.type_of_room_id == budget_room.type_of_room_id }.compact, {:prompt => "Elegir Habitacion"}%></td>
                          <%end%> 
                        <%end%>

                         <td><%= li.autocomplete_field :type_of_room, autocomplete_type_of_room_tipo_type_of_rooms_path, :placeholder => "Seleccione un tipo habitacion", 
                        :multiple => true, :update_elements => {:id => id} %>
                        <%= li.hidden_field :type_of_room_id%></td>


                        <td><%= li.number_field :subtotal,:class => "subtotal"%></td>

                        
                        <td><%= li.link_to_remove "",id: "borrar", :class => "btn btn-danger glyphicon glyphicon-trash " %></td>
                    </tr>
                    <!--aca suma-->
                    <%end%>
                    <tr>
                      <td><%= f.link_to_add "", :reservation_rooms , :class => "btn btn-primary glyphicon glyphicon-plus"%></td>
                    </tr>

                </tbody>
              </table>
              </div>
            </div>
        </div>
   
<div class="form-group">

    <%= f.label :total, class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :total, class: "form-control"%>
      <!--porque no funciona asi-->
      <%#= f.text_field :total,value:@my_reservation_requests.id, class: "form-control"%>
    </div>
    
  </div>


  <div class="form-group">
    <div class="col-sm-10">
      <%= button_tag( :class => "btn btn-primary") do %>
        <i class="glyphicon glyphicon-floppy-save"></i> Guardar 
      <% end %>
    </div>
  </div>
<% end %>
