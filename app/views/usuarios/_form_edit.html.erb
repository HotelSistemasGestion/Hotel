                                <%= role.role %><br>
                                                       
                            </div>
                          </div>                               

                          </div>                                                                                                           
                        </div>                                                       
                            
                <!-- /.post -->
              </div>                        
              <div class="box-footer">                
                <%= f.submit "Actualizar", :class => 'btn btn-success pull-right'%>                
                <%= link_to 'Cancelar', usuarios_path , class: 'btn btn-default pull-right' %>
              </div>
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
<% end %>        