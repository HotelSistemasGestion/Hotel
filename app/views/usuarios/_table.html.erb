<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><center>Administracion de Usuarios</center></h3>
     <div class="btn-group pull-right" role="group">
      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Crear Nuevo
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="<%=new_rol_path%>">Rol</a></li>
        <li><a href="<%=new_usuario_path%>">Usuario</a></li>
      </ul>
    </div>      
  </div>
  <div class="box-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Correo</th>
              <th>Fecha de Alta</th>
              <th>Rol</th>
              <!--<th>Rol</th>   -->                         
              <th></th>               
            </tr>
          </thead>
        <tbody>
            <% @usuarios.each do |usuario| %>
              <tr>
                <td><%= usuario.username %></td>
                <td><%= usuario.apellido %></td>
                <td><%= usuario.email %></td>  
                <td><%= usuario.created_at.strftime("%d-%m-%Y")%></td>
                <%if !usuario.rol.nil? %>                
                  <td><span class="label label-success"><%= usuario.rol.nombre %></span></td> 
                <%else%>
                  <td><%= link_to 'Asignar Rol', new_rol_path %></td> 
                <%end%>  
                <!--<td><span class="label label-success"><%#= usuario.rols.first.role%></span></td>-->              
                <td align="center">

                    <%= link_to '', usuario_path(usuario), remote: true ,class: "btn btn-primary glyphicon glyphicon-eye-open"%>

                  <% if can? :edit, User %>
                    <%= link_to edit_usuario_path(usuario), class: 'btn btn-warning', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-pencil"></span>
                    <% end %>                
                <% end %>                           
                  <% if can? :destroy, User %>
                    <%= link_to admin_destroy_user_path(usuario), method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger', title: 'Eliminar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-trash"></span>
                    <% end %>                                                
                <% end %>
                </td> 
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>