<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><center>Administracion de Usuarios</center></h3>
    <a href="<%=new_usuario_path%>" class="btn btn-primary pull-right" role="button">Agregar Nuevo</a> 
  </div>
  <div class="box-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Correo</th>
              <th>Fecha de Alta</th>   
              <th>Rol</th>              
              <th></th>   
              <th></th>   
            </tr>
          </thead>
        <tbody>
            <% @usuarios.each do |usuario| %>
              <tr>
                <td><%= usuario.username %></td>
                <td><%= usuario.apellido %></td>
                <td><%= usuario.email %></td>  
                <td><%= usuario.created_at.strftime("%d-%m-%Y") +' a las '+ usuario.created_at.strftime("%I:%M %p")%></td> 
                <td align="center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-info">Ver</button>
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                      <span class="caret"></span>
                      <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                      <% for i in 0..4 %>
                        <% role = User::ROLES[i] %>        
                        <%if usuario.roles.include?(role)%> 
                          <%a = "#{role}".to_s.humanize%>         
                          <li><a href="#"><%=a%></a></li>       
                        <% end %>
                      <% end %>                                            
                    </ul>
                  </div>
                </td>               
                <td align="center">
                  <% if can? :edit, User %>
                    <%= link_to edit_usuario_path(usuario), class: 'btn btn-warning', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-pencil"></span>
                    <% end %>                
                <% end %>
                </td> 
                <td align="center">
                  <% if can? :destroy, User %>
                    <%= link_to admin_destroy_user_path(usuario), method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger', title: 'Eliminar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-trash"></span>
                    <% end %>                                                
                <% end %>
                </td> 
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>