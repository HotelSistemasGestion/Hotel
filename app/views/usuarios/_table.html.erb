<div class="box box-primary">
<div class="box-header with-border">
  <h3 class="box-title"><center>Administracion de Usuarios</center></h3>
  <a href="<%=new_usuario_path%>" class="btn btn-primary pull-right" role="button">Agregar Nuevo</a> 
</div>
  <div class="box-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Correo</th>
              <th>Fecha de Alta</th>              
              <th></th>   
              <th></th>   
            </tr>
          </thead>
        <tbody>
            <% @usuarios.each do |usuario| %>
              <tr>
                <td><%= usuario.username %></td>
                <td><%= usuario.apellido %></td>
                <td><%= usuario.email %></td>  
                <td><%= usuario.created_at.strftime("%d-%m-%Y") +' a las '+ usuario.created_at.strftime("%I:%M %p")%></td>               
                <td>
                  <% if can? :edit, User %>
                    <%= link_to edit_usuario_path(usuario), class: 'btn btn-warning', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-pencil"></span>
                    <% end %>                
                <% end %>
                </td> 
                <td>
                  <% if can? :destroy, User %>
                    <%= link_to admin_destroy_user_path(usuario), method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger', title: 'Eliminar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-trash"></span>
                    <% end %>                                                
                <% end %>
                </td> 
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>