<div id="filterrific_results">
<div class="box-body">
<div id="filterrific_results">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
          
              <th>Fecha</th>

              <th>Caja</th>
          
              <th>Cajero</th>

              <th>Diferencia Registrada</th>
          
              <th></th>

            </tr>
          </thead>

          <tbody>
            <%= content_tag_for(:tr, @closing_cashes) do |closing_cash| %>
                    <td><%= closing_cash.fecha_cierre %></td>
                    <td><%= closing_cash.opening_cash.cash.descripcion %></td>
                    <td><%= closing_cash.opening_cash.employee.full_name %></td>
                    <td><%= number_to_currency_py(closing_cash.dif_registrada) %></td>
                    <td align="center">
                      <%= link_to closing_cash,remote: true, class: 'btn btn-primary', title: 'Ver', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                        <span class= "glyphicon glyphicon-eye-open"></span>
                      <% end %>
                    </td>
                    <% end %>
          </tbody>
        </table>
        </div>
      </div>
  </div>

  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">
         <nav><%=paginate @closing_cashes, :theme => 'twitter-bootstrap-3' %></nav>
    </ul>
    
  </div>
  </div>
