<div class="box">
  <div class="box-body">
    <div class="row">
          <%= form_for_filterrific @filterrific do |f| %>
          <div class="col-xs-3">
          <%= f.select(:sorted_by_cash,
      @filterrific.select_options[:sorted_by_cash],
      { include_blank: 'Todas las cajas' },{ :class => 'form-control' })%>
          </div>
          <div class="col-xs-3">
          <%= f.text_field(:desde,class: 'filterrific-periodically-observed form-control datepicker',placeholder:"Desde")%>
          </div>

          <div class="col-xs-3">
          <%= f.text_field(:hasta,class: 'filterrific-periodically-observed form-control datepicker',placeholder:"Hasta")%>
          </div>
           
         <%= render_filterrific_spinner %>
      <% end %>
      </div>
  </div>
</div>

<div class="box">
  <div class="box-header with-border">
    <div class="col-sm-4"></div>
          <h3 class="box-title col-sm-4">
            Cierres de Cajas
          </h3>
          <%= link_to 'Nuevo Cierre', new_closing_cash_path, class: "btn btn-primary" %>
  <%= render(
  partial: 'closing_cashes/list2',
  locals: { closing_cashes: @closing_cashes }
) %>    
  </div>
  
</div>
<script type="text/javascript">
  $(".datepicker").datepicker({
                format: 'dd-mm-yyyy',
                language: 'es',
              });
</script>        

