<div class="box">
    
    <div class="box-header with-border">
            <h3 class="box-title">#Hotel-UNI LISTA DE EMPLEADOS</h3>
    </div>        


<div class="box-body">
<%= link_to new_employee_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Empleado
  <% end %> 

</div>
  <div class="box-body">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
  
    <thead>
      <tr>
            <th>Tipos de Empleado</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Edad</th>
            <th>Cedula</th>
            <th>Telefono</th>
            <th>Correo</th>
            <th>Direccion</th>
            <th>Hijo</th>
        <th></th>
  
      </tr>
    </thead>

    <tbody>
     <% @employees.each do |employee| %>
        <tr>
            <td><%= employee.types_of_employee_tipo %></td>
            <td><%= employee.nombre %></td>
            <td><%= employee.apellido %></td>
            <td><%= employee.edad %></td>
            <td><%= employee.cedula %></td>
            <td><%= employee.telefono %></td>
            <td><%= employee.correo %></td>
            <td><%= employee.direccion %></td>
            <td><%= employee.hijo %></td>
            <td align="center"><%= link_to '', employee,class: "btn btn-primary glyphicon glyphicon-eye-open" %>
            <%= link_to '', edit_employee_path(employee), class: "btn btn-warning glyphicon glyphicon-pencil" %>
            <%= link_to '', employee, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger glyphicon glyphicon-trash" %></td>
        </tr>
     <% end %>
    </tbody>
  </table>
</div>
</div>
  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">
         <nav><%= paginate @employees, :theme => 'twitter-bootstrap-3' %></nav>
    </ul>
    
  </div>


</div>