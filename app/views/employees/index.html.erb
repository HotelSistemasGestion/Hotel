<div class="page-header">
  <%= link_to new_employee_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Employee
  <% end %>
  <h1>Listing employees</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Types of employee</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Edad</th>
            <th>Cedula</th>
            <th>Telefono</th>
            <th>Correo</th>
            <th>Direccion</th>
            <th>Hijo</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @employees) do |employee| %>
            <td><%= employee.types_of_employee %></td>
            <td><%= employee.nombre %></td>
            <td><%= employee.apellido %></td>
            <td><%= employee.edad %></td>
            <td><%= employee.cedula %></td>
            <td><%= employee.telefono %></td>
            <td><%= employee.correo %></td>
            <td><%= employee.direccion %></td>
            <td><%= employee.hijo %></td>
            <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
