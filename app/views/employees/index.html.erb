

<div class="row">
<div class="col-sm-1"></div>
<div class="col-sm-9">
<h1  class="titulo page-header">
            <i class="fa fa-globe"></i>#Hotel-UNI LISTA DE EMPLEADOS
            <small class="pull-right">Date: 2/10/2014</small>
          </h1>
</div>        
</div> 

<div class="row">
<div class="col-sm-1"></div>
<div class="col-sm-2">
<%= link_to new_employee_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Employee
  <% end %> 
</div>  
</div>
<div class="row">
<div class="col-sm-1"></div>
<div class="col-sm-9 table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Tipos de Empleado</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Edad</th>
            <th>Cedula</th>
            <th>Telefono</th>
            <th>Correo</th>
            <th>Direccion</th>
            <th>Hijo</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
     <% @employees.each do |employee| %>
        <tr>
            <td><%= employee.types_of_employee_tipo %></td>
            <td><%= employee.nombre %></td>
            <td><%= employee.apellido %></td>
            <td><%= employee.edad %></td>
            <td><%= employee.cedula %></td>
            <td><%= employee.telefono %></td>
            <td><%= employee.correo %></td>
            <td><%= employee.direccion %></td>
            <td><%= employee.hijo %></td>
            <td><%= link_to 'Show', employee %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
            <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
     <% end %>
    </tbody>
  </table>
</div>
</div>
