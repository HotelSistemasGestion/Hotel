            <th>Correo</th>
            <th>Direccion</th>
            <th>Hijo</th>
        <th></th>
  
      </tr>
    </thead>

   
    <tbody>
    
    
      <%= content_tag_for(:tr, @employees_report) do |employee| %>
        <tr>
            <td><%= employee.types_of_employee_tipo %></td>
