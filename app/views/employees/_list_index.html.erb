<div id="filterrific_results">



<div class="box-body">
<div class="box-body">

   <div id="filterrific_results">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Tipo de Empleado</th>
            <th>Nombre/s</th>
            <th>Apellido/s</th>
            <th>Edad</th>
            <th>Cedula</th>
            <th>Telefono</th>
            <th>Correo</th>
            <th>Direccion</th>
            <th>Hijo</th>
        <th></th>
  
      </tr>
    </thead>

   
    <tbody>
    
    
      <%= content_tag_for(:tr, @employees.order(id: :desc)) do |employee| %>
       <tr>   <!--Se determina el color del label dependiendo del estado NO UTILIZO ENUMERIZE, -->                   
                <%if employee.types_of_employee_tipo == "administrador" %>
                  <% btn = 'success' %>
                <%elsif employee.types_of_employee_tipo == "limpiadora" %>
                  <% btn = 'danger' %>
                <%elsif employee.types_of_employee_tipo == "botones" %>
                   <% btn = 'warning' %>
                <%else %>
                  <% btn = 'primary' %>
                <%end%>     
            <td><span class="label label-<%=btn%>"><%= employee.types_of_employee_tipo %></span></td>
           
            <td><%= employee.nombre %></td>
            <td><%= employee.apellido %></td>
            <td><%= employee.edad %></td>
            <td><%= employee.cedula %></td>
            <td><%= employee.telefono %></td>
            <td><%= employee.correo %></td>
            <td><%= employee.direccion %></td>
            <td><%= employee.hijo %></td>
            <td align="center"><%= link_to '', employee,class: "btn btn-primary glyphicon glyphicon-eye-open" %>
             <% if employee.types_of_employee_tipo != "retirado"%>
            <%= link_to '', edit_employee_path(employee), class: "btn btn-warning glyphicon glyphicon-pencil" %>
            <%= link_to '', employee, method: :delete, data: { confirm: 'Usted esta seguro?' },class: "btn btn-danger glyphicon glyphicon-trash" %></td>
            <%end%>
        </tr>
    <% end %>
    </tbody>

  </table>

 <div class="box-footer clearfix" style="margin-right:-10px">
    <ul class="pagination pagination-sm no-margin pull-right">
    <%= will_paginate @employees, renderer: BootstrapPagination::Rails, :container => false %>
    </ul>
    </div>
  </div>

  </div>

 
   
<div class="box-body hide">
