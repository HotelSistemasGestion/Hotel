      <%= f.text_field :direccion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :hijo, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :hijo, class: "form-control" %>
