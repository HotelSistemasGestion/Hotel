<%= form_for(@employee, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @employee.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h4>

      <ul>
      <% @employee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :types_of_employee, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :types_of_employee, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nombre, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nombre, class: "form-control" %>
    </div>
  </div>
