    <%= f.label :apellido, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :apellido, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :edad, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :edad, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cedula, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :cedula, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :telefono, class: "col-sm-2 control-label" %>
